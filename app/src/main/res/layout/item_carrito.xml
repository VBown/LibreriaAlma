<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <!-- Imagen portada -->
    <ImageView
        android:id="@+id/imgPortada"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:contentDescription="@string/imagen_portada"
        android:scaleType="centerCrop"/>

    <!-- Columna con título, precio y controles -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"/>

        <!-- Controles de cantidad + botón eliminar -->
        <LinearLayout
            android:id="@+id/layoutCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <!-- Botón menos -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMenos"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@string/bt_menos"
                android:textSize="18sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/lila_profundo"
                app:strokeWidth="1dp"
                android:textColor="@color/lila_profundo"/>

            <!-- Cantidad -->
            <TextView
                android:id="@+id/tvCantidad"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="@string/tv_cantidad"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/lila_profundo"/>

            <!-- Botón más -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMas"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="@string/bt_mas"
                android:textSize="18sp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/lila_profundo"
                app:strokeWidth="1dp"
                android:textColor="@color/lila_profundo"/>

            <!-- Botón eliminar -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:text="@string/eliminar"
                android:textColor="@android:color/holo_red_dark"
                app:icon="@drawable/ic_delete"
            app:iconGravity="start"
            tools:ignore="TouchTargetSizeCheck"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>